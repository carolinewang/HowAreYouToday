<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="linyingwang.howareyoutoday"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@drawable/icon_v2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUp"
            android:label="@string/app_name"
            android:parentActivityName=".Welcome">
        </activity>
        <activity
            android:name=".Welcome"
            android:label="@string/title_activity_welcome">
        </activity>
        <activity
            android:name=".LogIn"
            android:label="@string/title_activity_log_in"
            android:parentActivityName=".Welcome">
        </activity>
        <activity
            android:name=".ForgetPassword"
            android:label="@string/title_activity_forget_password"
            android:parentActivityName=".LogIn">
        </activity>
        <activity
            android:name=".MatchWithPartner"
            android:label="@string/title_activity_match_with_parther">
        </activity>
        <activity
            android:name=".MyAccount"
            android:label="@string/title_activity_my_account"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".NewMood"
            android:label="@string/title_activity_new_mood">
        </activity>
        <activity
            android:name=".Sad"
            android:label="@string/title_activity_sad">
        </activity>
        <activity
            android:name=".TagEditorActivity"
            android:label="@string/title_activity_tag_editor">
        </activity>
    </application>

</manifest>
